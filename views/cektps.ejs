<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Cek TPS - PILKADA 2024</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <!-- <script src="/js/client.js" defer></script> -->
  </head>
  <body style="font-family: 'Poppins', sans-serif">
    <div class="row align-items-center bg-success p-2">
      <div class="col-md-2 border-end border-white">
        <img
          src="/sriber_logo.png"
          alt="sriber_logo"
          width="60"
          class="bg-white rounded"
        />
        <img src="/kpu_logo.png" alt="kpu_logo" width="50" />
      </div>
      <div class="col-md-6 border-end border-white">
        <p class="mb-0 text-white"><b>Pengecekan Saksi & TPS</b></p>
        <p class="mb-0 text-white"><b>PILKADA - Kab. Lahat 2024</b></p>
      </div>
      <div class="col-md-4">
        <select class="form-select"  id="selectkec" Default select example">
          <option selected>Pilih Kecamatan</option>
          <% data.forEach(d => { %>
          <option value="<%= d.id_kecamatan %>"><%= d.nama_kecamatan %></option>
          <% }) %>
        </select>
      </div>
    </div>
    <div class="mt-4">
        <div class="row mx-3" id="kelurahan-container" >
        </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script>
    $(document).ready(function () {
        // Event handler for 'change' event on select
        $('#selectkec').on('change', function () {
        // Get selected value
        const selectedValue = $(this).val();

        // Check if a valid option is selected
        if (selectedValue !== "Pilih Kecamatan") {
            // Make an AJAX request to the API
            $.ajax({
            url: `hasil-cek-tps?kec=${selectedValue}`, // API endpoint
            type: 'GET',
            success: function (response) {
                console.log('API Response:', response.data); // Log the response
                // Clear the container
                $('#kelurahan-container').empty();
                
                // Loop through each kelurahan and create a table
                response.data.forEach(kelurahan => {
                const table = `
                    <div class="col-md-3">
                    <table class="table table-bordered">
                        <thead>
                        <tr>
                            <th class="table-secondary">${kelurahan.nama_kelurahan}</th>
                        </tr>
                        </thead>
                        <tbody>
                        ${kelurahan.tps.map(tps => `
                            <tr>
                            <td>${tps.tps_nomor} <span 
        style="
          display: inline-block; 
          width: 12px; 
          height: 12px; 
          border-radius: 50%; 
          background-color: ${tps.htps_id ? 'green' : 'red'};"
        title="${tps.htps_id ? 'HTPS ID ada' : 'HTPS ID kosong'}">
      </span></td>
                            </tr>
                        `).join('')}
                        </tbody>
                    </table>
                    </div>
                `;

                // Append the table to the container
                $('#kelurahan-container').append(table);
                });
            },
            error: function (xhr, status, error) {
                console.error('API Error:', status, error); // Log errors
            }
            });
        } else {
            console.log('Please select a valid Kecamatan.');
        }
        });
    });
    </script>

  </body>
</html>